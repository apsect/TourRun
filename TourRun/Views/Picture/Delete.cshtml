@model TourRun.Models.Picture

@{
    ViewBag.Title = "Видалити фото";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Видалення фото</h2>

<h3>Ви впевненні, що хочете видалити це фото?</h3>
<div>
    <h4>Фото</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Tour.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tour.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.imagePath)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.imagePath)
        </dd>

        <dd>
            <img src="@Url.Content(Model.imagePath)">
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            @Html.ActionLink("Вернутися до списку", "Index")
        </div>
    }
</div>
