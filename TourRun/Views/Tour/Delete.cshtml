@model TourRun.Models.Tour

@{
    ViewBag.Title = "Видалити тур";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Видалення туру</h2>

<h3>Ви впевненні, що хочете видалити цей тур?</h3>
<div>
    <h4>Тур</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.route)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.route)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.eat)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.eat)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.places)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.places)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.departure)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.departure)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.duration)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.duration)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.cost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cost)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.plan)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.plan)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            <p>Готелі</p>
        </dt>

        <dd>
            <ul class="list-unstyled">
                @foreach (var hotel in Model.Hotels)
                {
                    <li>@hotel.name</li>
                }
            </ul>
        </dd>

        <dt>
            <p>Транспортні засоби</p>
        </dt>

        <dd>
            <ul class="list-unstyled">
                @foreach (var transport in Model.Transports)
                {
                    <li>@transport.name</li>
                }
            </ul>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            @Html.ActionLink("Вернутися до списку", "Index")
        </div>
    }
</div>
